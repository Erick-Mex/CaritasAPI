<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/employee.css">
    <title>Administrador Caritas</title>
</head>
<body>
    
    <ul class="nav nav-pills justify-content-center my-1">
        <li class="nav-item">
          <a class="nav-link active" aria-current="page" href="/admin/employee">Empleados</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/admin/visit">Visitas</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/admin/departments">Departamentos</a>
        </li>
    </ul>

    <h2 class="text-center">Lista de empleados</h2>
    <div class="table-wrapper-scroll-y my-custom-scrollbar">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Correo</th>
                    <th scope="col">Departamento</th>
                </tr>
            </thead>
            <% for(var i = 0; i < employees.length; i++) { %>
                <tr>
                    <th scope="row"><%= i+1 %></th>
                    <td><%= employees[i].nombre %></td>
                    <td><%= employees[i].correo %></td>
                    <td><%= employees[i].departamento %></td>
                </tr>
            <% } %>
        </table>
    </div>

    <form class="mt-3 mx-3" action="/admin/loadfileEmployee" method="POST" enctype="multipart/form-data">
        <input type="file" name="fileName">
        <button type="submit">Subir</button>
    </form>

    <div class="options btn-group d-flex justify-content-center">
        <button class="btn btn-primary" id="0" onclick="showForms(this.id)">Agregar Empleado</button>
        <button class="btn btn-primary" id="1" onclick="showForms(this.id)">Eliminar Empleado</button>
        <button class="btn btn-primary" id="2" onclick="showForms(this.id)">Actualizar Datos</button>
        <button class="btn btn-primary" id="3" onclick="showForms(this.id)">Buscar Empleado</button>
    </div>

    <!-- Forms para agregar -->
    <form class="formEmployee" action="/admin/add" method="POST">
        <div class="mb-3">
            <label for="inputName" class="form-label">Nombre</label>
            <input name="name" type="text" class="form-control" id="InputName" placeholder="Inserte Nombre del Empleado">
        </div>
        <div class="mb-3">
            <label for="inputEmail" class="form-label">Correo Electronico</label>
            <input name="email" type="email" class="form-control" id="InputEmail" placeholder="Inserte Correo del Empleado">
        </div>
        <div class="mb-3">
            <label for="InputDepartment" class="form-label">Departamento</label>
            <input name="department" type="text" class="form-control" id="InputDepartment" placeholder="Inserte Departamento del Empleado">
        </div>
        <button type="submit" class="btn btn-secondary">Confirmar</button>
    </form>

    <!-- Forms para eliminar -->
    <form class="formEmployee" action="/admin/delete" method="POST">
        <div class="mb-3">
            <label for="inputEmail" class="form-label">Correo Electronico</label>
            <input name="email" type="email" class="form-control" id="InputEmail" placeholder="Inserte Correo del Empleado a eliminar">
        </div>
        <button type="submit" class="btn btn-secondary">Confirmar</button>
    </form>

    <!-- Forms para actualizar -->
    <form class="formEmployee" action="/admin/changeData" method="POST">
        <div class="mb-3">
            <label for="inputEmail" class="form-label">Correo Electronico</label>
            <input name="email" type="email" class="form-control" id="InputEmail" placeholder="Correo del empleado a modificar">
        </div>
        <div class="mb-3">
            <label for="inputName" class="form-label">Nombre</label>
            <input name="newName" type="text" class="form-control" id="InputName" placeholder="Inserte Nuevo Nombre de Empleado">
        </div>
        <div class="mb-3">
            <label for="inputEmail" class="form-label">Correo Electronico</label>
            <input name="newEmail" type="email" class="form-control" id="InputEmail" placeholder="Inserte Nuevo correo del Empleado">
        </div>
        <div class="mb-3">
            <label for="InputDepartment" class="form-label">Departamento</label>
            <input name="newDepartment" type="text" class="form-control" id="InputDepartment" placeholder="Inserte Nuevo Departamento del Empleado">
        </div>
        <button type="submit" class="btn btn-secondary">Confirmar</button>
    </form>

    <!-- Forms para buscar -->
    <form class="formEmployee" action="/admin/find" method="POST">
        <div class="mb-3">
            <label for="inputEmail" class="form-label">Correo Electronico</label>
            <input name="email" type="email" class="form-control" id="InputEmail" placeholder="Correo del Empleado a Buscar">
        </div>
        <button type="submit" class="btn btn-secondary">Confirmar</button>
    </form>

    <script src="/employee.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    
</body>
</html>